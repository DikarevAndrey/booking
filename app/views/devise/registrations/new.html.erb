<div class="container">
<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label "Электронная почта" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label "Пароль" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :Подтверждение_пароля %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  
  <div class="form-group">
    <%= f.label :Номер_телефона %><br />
    <%= f.text_field :tel_number, autocomplete: "tel_number" %>
  </div>
  
  <div class="form-group">
    <%= f.label :Дата_рождения %><br />
    <%= f.date_field :born_date, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.submit :Регистрация %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="container">
  <h1>Заведения</h1>
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <% @places.each do |place| %>
          <div class="col-md-4">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <p class="card-text">Звезды Мишлен: <%= place.rating.stars %></p>
                <p class="card-text">Основная кухня: <%= place.cuisine.name %></p>
                <p class="card-text">Вид заведения: <%= place.kind.name %></p>
                <p class="card-text">Название: <%= place.name %></p>
                <p class="card-text">Возрастные ограничения: <%= place.min_age %></p>
                <p class="card-text">Часы работы: <%= place.open_hours %></p>
                <p class="card-text">Средний чек: <%= place.avg_bill %></p>
                <p class="card-text">Описание: <%= place.description %></p>
                <p class="card-text">Рейтинг: <%= place.rating.points %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <%= link_to 'Показать', place, class: "btn btn-primary" %>
                    <% if signed_in? && current_user.admin == true && place.id == Administrator.find_by(user_id: current_user.id).place_id %>
                      <%= link_to 'Редактировать', edit_place_path(place), class: "btn btn-warning" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-2">
      <form action="places" method="get">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="beer" name="beer">
          <label class="form-check-label" for="beer">
            Пиво
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="smoke_allowed" name="smoke_allowed">
          <label class="form-check-label" for="smoke_allowed">
            Курение разрешено
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="cocktails" name="cocktails">
          <label class="form-check-label" for="cocktails">
            Коктейли
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="hookah" name="hookah">
          <label class="form-check-label" for="hookah">
            Кальян
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="strong_alco" name="strong_alco">
          <label class="form-check-label" for="strong_alco">
            Крепкий алкоголь
          </label>
        </div>
        <br>
        <!-- <label class="custom-select-label" for="kindSelect">Вид заведения</label> -->
        <select class="custom-select" id="kindSelect" name="kind_id">
          <option value="nil">Выберите вид</option>
          <% Kind.all.each do |kind| %>
            <option value="<%= kind.id %>"><%= kind.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <select class="custom-select" id="cuisineSelect" name="cuisine_id">
          <option value="nil">Выберите кухню</option>
          <% Cuisine.all.each do |cuisine| %>
            <option value="<%= cuisine.id %>"><%= cuisine.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <button type="submit" class="btn btn-primary">Подобрать</button>
      </form>
    </div>
  </div>
</div>
<br>
<div class="container">
  <h1>Заведения</h1>
  <hr>
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <% if @places == [] %>
          <h4>По вашему запросу ничего не найдено. Попробуйте изменить критерии поиска.</h4>
        <% else %>
          <%= render @places %>
        <% end %>
      </div>
    </div>

    <div class="col-md-2">
      <h6>Критерии поиска:</h6>
      <hr>
      <form action="places" method="get">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="beer" name="beer">
          <label class="form-check-label" for="beer">
            Пиво
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="smoke_allowed" name="smoke_allowed">
          <label class="form-check-label" for="smoke_allowed">
            Курение разрешено
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="cocktails" name="cocktails">
          <label class="form-check-label" for="cocktails">
            Коктейли
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="hookah" name="hookah">
          <label class="form-check-label" for="hookah">
            Кальян
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="strong_alco" name="strong_alco">
          <label class="form-check-label" for="strong_alco">
            Крепкий алкоголь
          </label>
        </div>
        <br>
        <select class="custom-select" id="kindSelect" name="kind_id">
          <option value="nil">Вид</option>
          <% Kind.all.each do |kind| %>
            <option value="<%= kind.id %>"><%= kind.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <select class="custom-select" id="cuisineSelect" name="cuisine_id">
          <option value="nil">Кухня</option>
          <% Cuisine.all.each do |cuisine| %>
            <option value="<%= cuisine.id %>"><%= cuisine.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <select class="custom-select" id="citySelect" name="city_id">
          <option value="nil">Город</option>
          <% City.all.each do |city| %>
            <option value="<%= city.id %>"><%= city.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <select class="custom-select" id="subwaySelect" name="subway_id">
          <option value="nil">Метро</option>
          <% Subway.all.each do |subway| %>
            <option value="<%= subway.id %>"><%= subway.name %></option>
          <% end %>
        </select>
        <br>
        <br>
        <button type="submit" class="btn btn-primary">Подобрать</button>
      </form>
    </div>
  </div>
</div>
<br>
<p>
  <strong>Kind:</strong>
  <%= @place.kind %>
</p>

<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>

<p>
  <strong>Min age:</strong>
  <%= @place.min_age %>
</p>

<p>
  <strong>Open hours:</strong>
  <%= @place.open_hours %>
</p>

<p>
  <strong>Avg bill:</strong>
  <%= @place.avg_bill %>
</p>

<p>
  <strong>Description:</strong>
  <%= @place.description %>
</p>

<% if signed_in? && current_user.admin == false %>
  <%= link_to 'Забронировать', new_order_path(:place_id => @place.id), class: "btn btn-warning" %>
<% end %>

<% if signed_in? && current_user.admin == true && @place.id == Administrator.find_by(user_id: current_user.id).place_id %>
  <%= link_to 'Редактировать', edit_place_path(@place), class:"btn btn-warning" %>
<% end %>

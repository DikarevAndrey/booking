<h1>Акции</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to 'Показать', offer %></td>
        <td><%= link_to 'Редактировать', edit_offer_path(offer) %></td>
        <td><%= link_to 'Удалить', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая акция', new_offer_path %>
